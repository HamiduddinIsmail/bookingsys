    font-size: 0.8rem;
    color: #6c757d;
}

/* Form Actions */
.form-actions {
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.btn-cancel, .btn-create {
    padding: 0.8rem 1.5rem;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
}

.btn-cancel {
    background: #6c757d;
    color: white;
}

.btn-cancel:hover {
    background: #495057;
    color: white;
    transform: translateY(-2px);
}

.btn-create {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
}

.btn-create:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
}

/* Responsive Design */
@media (max-width: 768px) {
    .form-grid {
        grid-template-columns: 1fr;
    }
    
    .header-title {
        font-size: 2rem;
    }
    
    .modern-promotion-form {
        padding: 2rem;
    }
    
    .form-actions {
        flex-direction: column;
    }
}
</style> 