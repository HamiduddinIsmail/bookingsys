.users-selection {
    max-height: 300px;
    overflow-y: auto;
    border: 2px solid #e9ecef;
    border-radius: 10px;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.8);
}

.user-checkbox {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 0.8rem;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.3s ease;
}

.user-checkbox:hover {
    background: rgba(102, 126, 234, 0.1);
}

.user-checkbox input[type="checkbox"] {
    display: none;
}

.checkbox-custom {
    width: 20px;
    height: 20px;
    border: 2px solid #667eea;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.user-checkbox input[type="checkbox"]:checked + .checkbox-custom {
    background: #667eea;
    color: white;
}

