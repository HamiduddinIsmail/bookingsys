<script>
document.addEventListener('DOMContentLoaded', function() {
  const dateInput = document.getElementById('bookingDate');
  const timeSlots = document.querySelectorAll('.time-slot-card');
  const notesInput = document.getElementById('bookingNotes');
  const confirmBtn = document.getElementById('confirmBooking');
  const paymentModal = new bootstrap.Modal(document.getElementById('paymentModal'));
  
  let selectedDate = '';
  let selectedTime = '';
  let selectedSlots = [];
  let appliedVoucher = null;
  
  // Set minimum date to today
  const today = new Date().toISOString().split('T')[0];
  dateInput.min = today;
  
  // Date selection
  dateInput.addEventListener('change', function() {
    selectedDate = this.value;
    updateSummary();
  });
  
  // Time slot selection
  timeSlots.forEach(slot => {
    slot.addEventListener('click', function() {
      const time = this.dataset.time;
      
      if (this.classList.contains('selected')) {
        // Deselect
        this.classList.remove('selected');
        selectedSlots = selectedSlots.filter(t => t !== time);
      } else {
        // Select
        this.classList.add('selected');
        selectedSlots.push(time);
      }
      
      updateSummary();
    });
  });
  
  // Update booking summary
  function updateSummary() {
    const summaryDate = document.getElementById('summaryDate');
    const summaryTime = document.getElementById('summaryTime');
    const summaryDuration = document.getElementById('summaryDuration');
    const summaryTotal = document.getElementById('summaryTotal');
    
    summaryDate.textContent = selectedDate || 'Not selected';
    
    if (selectedSlots.length > 0) {
      const sortedSlots = selectedSlots.sort();
      const startTime = sortedSlots[0];
      const endTime = sortedSlots[sortedSlots.length - 1];
      
      // Calculate end time (add 1 hour to last slot)
      const endHour = parseInt(endTime.split(':')[0]) + 1;
      const endTimeStr = endHour.toString().padStart(2, '0') + ':00';
      
      summaryTime.textContent = `${startTime} - ${endTimeStr}`;
      summaryDuration.textContent = `${selectedSlots.length} hour(s)`;
      
      const hourlyRate = <%= court.hourly_rate %>;
      const totalAmount = selectedSlots.length * hourlyRate;
      summaryTotal.textContent = `RM ${totalAmount.toFixed(2)}`;
      
      confirmBtn.disabled = false;
    } else {
      summaryTime.textContent = 'Not selected';
      summaryDuration.textContent = '0 hours';
      summaryTotal.textContent = 'RM 0.00';
      confirmBtn.disabled = true;
    }
  }
  
  // Confirm booking
  confirmBtn.addEventListener('click', function() {
    if (selectedDate && selectedSlots.length > 0) {
      // Show payment modal
      const modalCourt = document.getElementById('modalCourt');
      const modalDate = document.getElementById('modalDate');
      const modalTime = document.getElementById('modalTime');
      const modalAmount = document.getElementById('modalAmount');
      
      modalCourt.textContent = '<%= court.name %>';
      modalDate.textContent = selectedDate;
      
      const sortedSlots = selectedSlots.sort();
      const startTime = sortedSlots[0];
      const endHour = parseInt(sortedSlots[sortedSlots.length - 1].split(':')[0]) + 1;
      const endTimeStr = endHour.toString().padStart(2, '0') + ':00';
      modalTime.textContent = `${startTime} - ${endTimeStr}`;
      
      const hourlyRate = <%= court.hourly_rate %>;
      const totalAmount = selectedSlots.length * hourlyRate;
      modalAmount.textContent = `RM ${totalAmount.toFixed(2)}`;
      
      paymentModal.show();
    }
  });
  
  // Process payment
  document.getElementById('processPayment').addEventListener('click', function() {
    const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
    
    // Prepare booking data
    const bookingData = {
      court_id: '<%= court.id %>',
      booking_date: selectedDate,
      start_time: selectedSlots.sort()[0],
      end_time: (parseInt(selectedSlots.sort().pop().split(':')[0]) + 1).toString().padStart(2, '0') + ':00',
      total_hours: selectedSlots.length.toString(),
      notes: notesInput.value,
      payment_method: paymentMethod,
      voucher_code: appliedVoucher ? appliedVoucher.code : null,
      discount_amount: appliedVoucher ? appliedVoucher.discount_amount : 0
    };
    
    // Submit booking
    fetch('/bookings', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(bookingData)
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        paymentModal.hide();
        alert('Booking confirmed successfully!');
        window.location.href = '/bookings/my-bookings';
      } else {
        alert('Booking failed: ' + data.message);
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('An error occurred while processing your booking.');
    });
  });
  
  // Voucher code functionality
  const voucherInput = document.getElementById('voucherCode');
  const applyVoucherBtn = document.getElementById('applyVoucher');
  const voucherMessage = document.getElementById('voucherMessage');
  
  applyVoucherBtn.addEventListener('click', function() {
    const voucherCode = voucherInput.value.trim().toUpperCase();
    
    if (!voucherCode) {
      showVoucherMessage('Please enter a voucher code', 'error');
      return;
    }
    
    // Validate voucher
    fetch('/promotions/validate', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        code: voucherCode,
        booking_amount: calculateSubtotal()
      })
    })
    .then(response => response.json())
    .then(data => {
      if (data.valid) {
        appliedVoucher = data.promotion;
        showVoucherMessage(`Voucher applied! ${appliedVoucher.title}`, 'success');
        updateSummary();
      } else {
        showVoucherMessage(data.error, 'error');
        appliedVoucher = null;
        updateSummary();
      }
    })
    .catch(error => {
      console.error('Error:', error);
      showVoucherMessage('Failed to validate voucher', 'error');
    });
  });
  
  function showVoucherMessage(message, type) {
    voucherMessage.textContent = message;
    voucherMessage.className = `voucher-message ${type}`;
    voucherMessage.style.display = 'block';
    
    setTimeout(() => {
      voucherMessage.style.display = 'none';
    }, 5000);
  }
  
  function calculateSubtotal() {
    const hourlyRate = <%= court.hourly_rate %>;
    return selectedSlots.length * hourlyRate;
  }
  
  // Update booking summary with voucher
  function updateSummary() {
    const summaryDate = document.getElementById('summaryDate');
    const summaryTime = document.getElementById('summaryTime');
    const summaryDuration = document.getElementById('summaryDuration');
    const summarySubtotal = document.getElementById('summarySubtotal');
    const summaryDiscount = document.getElementById('summaryDiscount');
    const voucherDiscountItem = document.getElementById('voucherDiscountItem');
    const summaryTotal = document.getElementById('summaryTotal');
    
    summaryDate.textContent = selectedDate || 'Not selected';
    
    if (selectedSlots.length > 0) {
      const sortedSlots = selectedSlots.sort();
      const startTime = sortedSlots[0];
      const endTime = sortedSlots[sortedSlots.length - 1];
      
      // Calculate end time (add 1 hour to last slot)
      const endHour = parseInt(endTime.split(':')[0]) + 1;
      const endTimeStr = endHour.toString().padStart(2, '0') + ':00';
      
      summaryTime.textContent = `${startTime} - ${endTimeStr}`;
      summaryDuration.textContent = `${selectedSlots.length} hour(s)`;
      
      const hourlyRate = <%= court.hourly_rate %>;
      const subtotal = selectedSlots.length * hourlyRate;
      summarySubtotal.textContent = `RM ${subtotal.toFixed(2)}`;
      
      let totalAmount = subtotal;
      
      // Apply voucher discount if available
      if (appliedVoucher) {
        const discountAmount = appliedVoucher.discount_amount;
        summaryDiscount.textContent = `-RM ${discountAmount.toFixed(2)}`;
        voucherDiscountItem.style.display = 'flex';
        totalAmount = appliedVoucher.final_amount;
      } else {
        voucherDiscountItem.style.display = 'none';
      }
      
      summaryTotal.textContent = `RM ${totalAmount.toFixed(2)}`;
      confirmBtn.disabled = false;
    } else {
      summaryTime.textContent = 'Not selected';
      summaryDuration.textContent = '0 hours';
      summarySubtotal.textContent = 'RM 0.00';
      voucherDiscountItem.style.display = 'none';
      summaryTotal.textContent = 'RM 0.00';
      confirmBtn.disabled = true;
    }
  }
  
  // Initialize
  updateSummary();
});

// Eligible Vouchers JS
function fetchEligibleVouchers() {
  const eligibleVouchersDiv = document.getElementById('eligibleVouchers');
  eligibleVouchersDiv.innerHTML = '<div class="eligible-loading">Loading vouchers...</div>';
  const bookingDate = document.getElementById('bookingDate').value;
  const hourlyRate = <%= court.hourly_rate %>;
  const selectedSlots = Array.from(document.querySelectorAll('.time-slot-card.selected')).map(slot => slot.dataset.time);
  const bookingAmount = selectedSlots.length * hourlyRate;

  fetch('/promotions/eligible', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ booking_date: bookingDate, booking_amount: bookingAmount })
  })
  .then(res => res.json())
  .then(data => {
    if (data.success && data.promotions.length > 0) {
      eligibleVouchersDiv.innerHTML = data.promotions.map(promo => `
        <div class="eligible-voucher-card" onclick="document.getElementById('voucherCode').value='${promo.code}';document.getElementById('applyVoucher').click();">
          <div class="eligible-voucher-code">${promo.code}</div>
          <div class="eligible-voucher-title">${promo.title}</div>
          <div class="eligible-voucher-desc">${promo.description || ''}</div>
          <div class="eligible-voucher-meta">
            <span>${promo.discount_type === 'percentage' ? promo.discount_value + '% off' : 'RM' + promo.discount_value + ' off'}</span>
            <span>Valid: ${promo.start_date} to ${promo.end_date}</span>
          </div>
        </div>
      `).join('');
    } else {
      eligibleVouchersDiv.innerHTML = '<div class="eligible-none">No eligible vouchers for this booking.</div>';
    }
  })
  .catch(() => {
    eligibleVouchersDiv.innerHTML = '<div class="eligible-none">Could not load vouchers.</div>';
  });
}

document.addEventListener('DOMContentLoaded', function() {
  // ... existing code ...
  fetchEligibleVouchers();
  document.getElementById('bookingDate').addEventListener('change', fetchEligibleVouchers);
  document.querySelectorAll('.time-slot-card').forEach(slot => {
    slot.addEventListener('click', fetchEligibleVouchers);
  });
});

