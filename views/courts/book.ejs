<div class="booking-page-wrapper">
  <!-- Modern Booking Header -->
  <div class="booking-header">
    <div class="header-content">
      <div class="header-icon">
            <i class="fas fa-calendar-check"></i>
          </div>
      <h1 class="header-title">Book Your Court</h1>
      <p class="header-subtitle">Select your preferred date and time to secure your badminton court</p>
    </div>
        </div>

  <!-- Modern Booking Form -->
  <div class="booking-section">
    <div class="booking-container">
      <div class="modern-booking-form">
        <!-- Court Information Section -->
        <div class="form-section">
          <div class="section-header">
            <div class="section-icon">
              <i class="fas fa-table-tennis"></i>
            </div>
            <h3 class="section-title">Court Information</h3>
          </div>
          <div class="court-info-container">
            <!-- Court Image -->
            <div class="court-image-section">
              <% if (court.images && court.images.length > 0) { %>
                <img src="/uploads/courts/<%= court.images[0].image_path %>" alt="<%= court.name %>" class="court-image">
              <% } else { %>
                <div class="court-image-placeholder">
                  <i class="fas fa-table-tennis"></i>
                  <span>No image available</span>
                </div>
              <% } %>
            </div>
            
            <!-- Court Details -->
            <div class="court-details-section">
              <div class="court-header">
                <h4 class="court-name"><%= court.name %></h4>
                <span class="status-badge available">
                  <i class="fas fa-check-circle"></i>
                  Available for booking
                </span>
              </div>
              
              <div class="court-meta">
                <div class="meta-item">
                  <i class="fas fa-tag"></i>
                  <span class="meta-label">Price:</span>
                  <span class="meta-value">RM<%= court.hourly_rate %>/hour</span>
                </div>
                <div class="meta-item">
                  <i class="fas fa-clock"></i>
                  <span class="meta-label">Duration:</span>
                  <span class="meta-value">1 hour per slot</span>
              </div>
                <% if (court.address) { %>
                <div class="meta-item">
                  <i class="fas fa-map-marker-alt"></i>
                  <span class="meta-label">Location:</span>
                  <span class="meta-value"><%= court.address %></span>
            </div>
                <% } %>
              </div>
              
              <% if (court.description) { %>
              <div class="court-description">
                <h6 class="description-title">
                  <i class="fas fa-info-circle"></i>
                  About this court
                </h6>
                <p class="description-text"><%= court.description %></p>
            </div>
              <% } %>
              
              <!-- Facilities -->
              <div class="court-facilities">
                <h6 class="facilities-title">
                  <i class="fas fa-star"></i>
                  Facilities & Amenities
                </h6>
                <div class="facilities-grid">
                  <div class="facility-item">
                    <i class="fas fa-snowflake"></i>
                    <span>Air Conditioning</span>
                  </div>
                  <div class="facility-item">
                    <i class="fas fa-parking"></i>
                    <span>Parking Available</span>
                  </div>
                  <div class="facility-item">
                    <i class="fas fa-utensils"></i>
                    <span>Food & Beverages</span>
                  </div>
                  <div class="facility-item">
                    <i class="fas fa-couch"></i>
                    <span>Rest Area</span>
                  </div>
                  <div class="facility-item">
                    <i class="fas fa-person-booth"></i>
                    <span>Changing Rooms</span>
                  </div>
                  <div class="facility-item">
                    <i class="fas fa-wifi"></i>
                    <span>Free WiFi</span>
                  </div>
                </div>
              </div>
            </div>
      </div>
    </div>

        <!-- Date Selection Section -->
            <div class="form-section">
              <div class="section-header">
                <div class="section-icon">
                  <i class="fas fa-calendar-alt"></i>
                </div>
            <h3 class="section-title">Select Date</h3>
                </div>
          <div class="form-group">
            <label class="form-label">
                  <i class="fas fa-calendar"></i>
              Booking Date *
            </label>
            <input type="date" id="bookingDate" class="form-input" required>
              </div>
            </div>

        <!-- Time Slots Section -->
            <div class="form-section">
              <div class="section-header">
                <div class="section-icon">
                  <i class="fas fa-clock"></i>
                </div>
            <h3 class="section-title">Select Time Slots</h3>
                </div>
          <div class="time-slots-grid">
            <div class="time-slot-card" data-time="09:00">
              <div class="time-slot-time">09:00 - 10:00</div>
              <div class="time-slot-status available">Available</div>
      </div>
            <div class="time-slot-card" data-time="10:00">
              <div class="time-slot-time">10:00 - 11:00</div>
              <div class="time-slot-status available">Available</div>
                      </div>
            <div class="time-slot-card" data-time="11:00">
              <div class="time-slot-time">11:00 - 12:00</div>
              <div class="time-slot-status available">Available</div>
        </div>
            <div class="time-slot-card" data-time="12:00">
              <div class="time-slot-time">12:00 - 13:00</div>
              <div class="time-slot-status available">Available</div>
            </div>
            <div class="time-slot-card" data-time="13:00">
              <div class="time-slot-time">13:00 - 14:00</div>
              <div class="time-slot-status available">Available</div>
            </div>
            <div class="time-slot-card" data-time="14:00">
              <div class="time-slot-time">14:00 - 15:00</div>
              <div class="time-slot-status available">Available</div>
            </div>
            <div class="time-slot-card" data-time="15:00">
              <div class="time-slot-time">15:00 - 16:00</div>
              <div class="time-slot-status available">Available</div>
            </div>
            <div class="time-slot-card" data-time="16:00">
              <div class="time-slot-time">16:00 - 17:00</div>
              <div class="time-slot-status available">Available</div>
            </div>
            <div class="time-slot-card" data-time="17:00">
              <div class="time-slot-time">17:00 - 18:00</div>
              <div class="time-slot-status available">Available</div>
            </div>
            <div class="time-slot-card" data-time="18:00">
              <div class="time-slot-time">18:00 - 19:00</div>
              <div class="time-slot-status available">Available</div>
            </div>
            <div class="time-slot-card" data-time="19:00">
              <div class="time-slot-time">19:00 - 20:00</div>
              <div class="time-slot-status available">Available</div>
            </div>
            <div class="time-slot-card" data-time="20:00">
              <div class="time-slot-time">20:00 - 21:00</div>
              <div class="time-slot-status available">Available</div>
            </div>
      </div>
            </div>

        <!-- Voucher Code Section -->
        <div class="form-section">
          <div class="section-header">
            <div class="section-icon">
              <i class="fas fa-gift"></i>
            </div>
            <h3 class="section-title">Voucher Code (Optional)</h3>
          </div>
          <!-- Eligible Vouchers Display -->
          <div id="eligibleVouchers" class="eligible-vouchers-list" style="margin-bottom:1.5rem;"></div>
          <div class="voucher-section">
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-tag"></i>
                Enter Voucher Code
              </label>
              <div class="voucher-input-group">
                <input type="text" 
                       id="voucherCode" 
                       class="form-input" 
                       placeholder="Enter your voucher code..."
                       maxlength="20">
                <button type="button" class="btn-apply-voucher" id="applyVoucher">
                  <i class="fas fa-check"></i>
                  <span>Apply</span>
                </button>
              </div>
              <div id="voucherMessage" class="voucher-message"></div>
            </div>
          </div>
        </div>

        <!-- Additional Notes Section -->
            <div class="form-section">
              <div class="section-header">
                <div class="section-icon">
                  <i class="fas fa-sticky-note"></i>
                </div>
            <h3 class="section-title">Additional Notes</h3>
                </div>
          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-edit"></i>
              Special Requests
            </label>
            <textarea id="bookingNotes" class="form-textarea" placeholder="Any special requests or notes for your booking..."></textarea>
              </div>
                </div>

        <!-- Booking Summary Section -->
        <div class="form-section">
          <div class="section-header">
            <div class="section-icon">
              <i class="fas fa-receipt"></i>
              </div>
            <h3 class="section-title">Booking Summary</h3>
            </div>
            <div class="booking-summary">
                <div class="summary-item">
                  <span class="summary-label">Court:</span>
                  <span class="summary-value"><%= court.name %></span>
                </div>
            <div class="summary-item">
              <span class="summary-label">Date:</span>
              <span class="summary-value" id="summaryDate">Not selected</span>
            </div>
            <div class="summary-item">
              <span class="summary-label">Time:</span>
              <span class="summary-value" id="summaryTime">Not selected</span>
            </div>
                <div class="summary-item">
                  <span class="summary-label">Duration:</span>
              <span class="summary-value" id="summaryDuration">0 hours</span>
                </div>
                <div class="summary-item">
                  <span class="summary-label">Subtotal:</span>
                  <span class="summary-value" id="summarySubtotal">RM 0.00</span>
                </div>
                <div class="summary-item voucher-discount" id="voucherDiscountItem" style="display: none;">
                  <span class="summary-label">Voucher Discount:</span>
                  <span class="summary-value discount" id="summaryDiscount">-RM 0.00</span>
                </div>
                <div class="summary-item total">
                  <span class="summary-label">Total Amount:</span>
              <span class="summary-value" id="summaryTotal">RM 0.00</span>
                </div>
              </div>
      </div>

        <!-- Form Actions -->
        <div class="form-actions">
          <a href="/courts" class="btn-secondary">
            <i class="fas fa-arrow-left"></i>
            <span>Back to Courts</span>
          </a>
          <button type="button" class="btn-primary" id="confirmBooking">
            <i class="fas fa-check-circle"></i>
                  <span>Confirm Booking</span>
              </button>
            </div>
        </div>
      </div>
    </div>
  </div>

<!-- Payment Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fas fa-credit-card me-2"></i>
          Payment Confirmation
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="payment-summary">
          <h6>Booking Details:</h6>
          <div class="payment-item">
            <span>Court:</span>
            <span id="modalCourt"><%= court.name %></span>
      </div>
          <div class="payment-item">
            <span>Date:</span>
            <span id="modalDate"></span>
    </div>
          <div class="payment-item">
            <span>Time:</span>
            <span id="modalTime"></span>
  </div>
          <div class="payment-item">
            <span>Amount:</span>
            <span id="modalAmount"></span>
</div>
        </div>
        <div class="payment-methods mt-4">
          <h6>Select Payment Method:</h6>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="paymentMethod" id="cashPayment" value="cash" checked>
            <label class="form-check-label" for="cashPayment">
              <i class="fas fa-money-bill-wave me-2"></i>Cash Payment
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="paymentMethod" id="onlinePayment" value="online">
            <label class="form-check-label" for="onlinePayment">
              <i class="fas fa-credit-card me-2"></i>Online Payment
            </label>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success" id="processPayment">
          <i class="fas fa-check me-2"></i>Process Payment
        </button>
      </div>
    </div>
  </div>
</div>

